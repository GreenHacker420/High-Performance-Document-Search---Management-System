# Database Configuration (for Coolify/Production - use connection string)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Database Configuration (for local development with docker-compose.local.yml)
POSTGRES_DB=document_search
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# Backend Configuration
BACKEND_PORT=9000
NODE_ENV=production

# Frontend Configuration
FRONTEND_PORT=3000
VITE_API_URL=http://your-domain.com:9000

# Upload Configuration
UPLOAD_MAX_SIZE=10485760

# CORS Configuration
CORS_ORIGIN=http://your-domain.com
